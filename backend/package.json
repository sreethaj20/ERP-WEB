{
  "name": "erp-backend",
  "version": "1.0.0",
  "description": "ERP Backend (Node.js + Express) for Auth, Users, Attendance, Leaves, Tasks, Reports, Notifications",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "set NODE_ENV=development&& node --watch server.js",
    "start": "node server.js",
    "prod": "pm2 start ecosystem.config.js --env production",
    "stop": "pm2 stop erp-backend",
    "restart": "pm2 restart erp-backend",
    "logs": "pm2 logs erp-backend",
    "monitor": "pm2 monit",
    "backup": "node scripts/backup-db.js",
    "backup:win": "scripts\\backup-db.bat",
    "setup": "setup.bat",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.971.0",
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^4.0.2",
    "pg": "^8.16.3"
  }
}
